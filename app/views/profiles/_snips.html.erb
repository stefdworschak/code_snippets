<div class="card">
  <div class="card-header">My Snippets</div>
  <div class="card-body">
    <% if @snippets.length == 0 %>
      You don't have any snippets yet.
      <br />
      <%= link_to 'Create one now', new_snippet_path %>
    <% else %>
      <% @snippets.each do |snippet| %>

        <h4 class="snip-header"><%= snippet.title %></h4>
        <div class="snip-body"><pre><%= snippet.code %></pre></div>
        <p><%= link_to 'Edit', edit_snippet_path(snippet) %> | 
        <%= link_to 'Delete', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></p> 
      <% end %>
    <% end %>
  </div>
</div>
