<%= form_with(model: snippet, local: true) do |form| %>
  <% if snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% snippet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card create-snippet">
  <div class="card-header">
    Create Snippet
  </div>
  <div class="card-body">

    <div class="form-group">
      <%= form.text_field :title, class: "form-control", placeholder: "Short Description"  %>
    </div>

    <div class="form-group">
      <label>Code Snippet</label>
      <%= form.text_area :code, class: "form-control", rows: "10", max: 40 %>
    </div>
    <span id="char-value">0</span>/512

    <div class="form-group">
      <%= form.text_field :user_id, class: "form-control", value: current_user.id, type: "hidden" %>
    </div>

    <div class="actions">
      <%= form.submit :class => "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>  
<% end %>
